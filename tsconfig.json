{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./switch",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "baseUrl": "./switch",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "switch/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "example",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
} 